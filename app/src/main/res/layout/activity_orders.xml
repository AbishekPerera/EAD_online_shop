<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrdersActivity"
    android:padding="16dp">

    <!-- Order Status Container -->
    <LinearLayout
        android:id="@+id/order_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Order Status Icons/Steps -->
        <ImageView
            android:id="@+id/order_placed_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Order Placed"
            android:src="@android:drawable/presence_away"
             />

        <View
            android:id="@+id/status_separator_1"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/purple_200"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:id="@+id/order_approved_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Order Approved"
            android:src="@android:drawable/presence_online"
            />

        <View
            android:id="@+id/status_separator_2"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/purple_200"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:id="@+id/order_shipped_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Order Shipped"
            android:src="@android:drawable/btn_star_big_on"
             />

        <View
            android:id="@+id/status_separator_3"
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/purple_200"
            android:layout_marginHorizontal="8dp" />

        <ImageView
            android:id="@+id/order_delivered_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Order Delivered"
            android:src="@android:drawable/checkbox_on_background"
             />

    </LinearLayout>

    <!-- Order Items List (Static for Now) -->
    <LinearLayout
        android:id="@+id/order_items_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#DCC7FF"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_status_container">

        <!-- Individual Ordered Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Product Image"
                android:scaleType="centerCrop"
                android:src="@drawable/cat2" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample Product Name"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$100.00"
                    android:textColor="@color/purple_200"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty: 2"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Repeat more items as necessary... -->

    </LinearLayout>

    <!-- Order Total Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/order_items_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/order_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Spent: $200.00"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
