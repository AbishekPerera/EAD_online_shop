<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- Item Image -->
    <ImageView
        android:id="@+id/orderItemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_item"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop" />

    <!-- Item Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Item Name -->
        <TextView
            android:id="@+id/orderItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Quantity and Price -->
        <TextView
            android:id="@+id/orderItemDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: 2  |  Price: $50.00"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Item Status -->
        <TextView
            android:id="@+id/orderItemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Delivered"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textStyle="italic"
            android:textColor="@color/green_700" /> <!-- Change color for status -->
    </LinearLayout>
</LinearLayout>
